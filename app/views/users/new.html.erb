<h1>Sign up</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>

  <div class="user_title">
    
    <%= f.file_field :image, class: "fileInput",style: "display:none;", id: :user_image  %>

  </div> 
  
  <div class="input-group">
    <input type="text" id="image" class="form-control" placeholder="select file...">
    <span class="input-group-btn"><button type="button" class="btn btn-info" onclick="$('input[id=user_image]').click();">Browse</button></span>
  </div>
  <p>jpg,jpeg,gif,png only</p>

  <script>
    $('input[id=user_image]').change(function() {
      $('#image').val($(this).val().replace("C:\\fakepath\\", ""));
    });
  </script>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Create my account" %>
<% end %>